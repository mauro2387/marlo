# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Frontend URL (para redirecciones)
NEXT_PUBLIC_SITE_URL=http://localhost:3005

# WhatsApp Business
NEXT_PUBLIC_WHATSAPP_NUMBER=56912345678

# Instagram
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/marlocookies

# Google Analytics (opcional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ==================== MERCADO PAGO ====================
# Obt√©n tus credenciales en: https://www.mercadopago.com.uy/developers/panel
# PUBLIC KEY (frontend - visible en el navegador)
NEXT_PUBLIC_MP_PUBLIC_KEY=APP_USR-xxxxxxxx-xxxxxxxx-xxxx-xxxx-xxxxxxxxxxxx

# ACCESS TOKEN (backend - NUNCA expongas esto en el frontend)
MP_ACCESS_TOKEN=APP_USR-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-xxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-xxxxxxxxx

# SERVICE ROLE KEY de Supabase (solo para webhook de MP)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe (alternativa a Mercado Pago)
# NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_xxxxx

# Sentry (monitoreo de errores)
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Feature flags
NEXT_PUBLIC_ENABLE_LOYALTY=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_WHATSAPP=true

# Debug mode (solo desarrollo)
NEXT_PUBLIC_DEBUG_MODE=false
